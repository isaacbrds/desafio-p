<%= form_with model: equipament do |form| %>
  <% if equipament.errors.any? %>
      <ul>
        <% equipament.errors.each do |error| %>
          <div class="<%= flash_class('error') %>" role="alert">
            <%= error.full_message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>
      </ul>
  <% end %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :brand %>
    <%= form.text_field :brand , class: "form-control" %>
  </div>
  <div class="form-group mt-2">
    <%= form.label :kind %>
    <%= form.select :kind , Equipament.kinds, class: "form-control" %>
  </div>
  <div class="form-group mt-2">
    <%= form.label :place_id %>
    <%= form.collection_select(:place_id, @places, :id, :name, include_blank: true, class: 'form-control' ) %>
  </div>
  <div class="form-group">
    <%= form.label :picture %>
    <%= form.file_field :picture , class: 'form-control' %>
  </div>

  <div class="mt-2">
    <%= form.submit t("send"), class: "btn btn-primary" %>
  </div>
<% end %>

<div class="pt-3">
  <%= link_to t('back'), equipaments_path %>
</div>